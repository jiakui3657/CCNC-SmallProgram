/* pages/binding/binding.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f4f4f4;  
  padding-bottom: 98rpx;
  min-height:100%;
  overflow: auto;
}
.list{
  padding: 0 46rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.list:first-child{
   margin-top: 0rpx;
}
.name{
  height: 107rpx;
  line-height: 107rpx;
  padding-left: 16rpx;
  font-size: 32rpx;    
  color: #333;
}
.address{
  padding: 30rpx 0;
  padding-left: 16rpx;  
  font-size: 28rpx;
  color: #999;
  border-top: 1rpx solid #ddd;
}
button{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 98rpx;
  line-height: 95rpx;
  background:linear-gradient(to right, #b30d66, #98119a);
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
}
button::after{
  border-radius: 0;
}