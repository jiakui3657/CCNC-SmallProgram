/**index.wxss**/
page{
  height: 100%;
}
.container{
  overflow: hidden;
  display: block;
}
.header{
  background-color:#fff;
  padding:0 46rpx;
  display:block;
  white-space:;
  width:100%;
  box-sizing:border-box;
}
.title{
  border-bottom: 1rpx solid #dddddd;
  width: 100%;
  height: 100rpx;
  line-height: 95rpx;
  color: #999;
  font-size: 28rpx;
}
.title image{
  width: 31rpx;
  height: 38rpx;
  vertical-align:middle;
  margin-left: 15rpx;
  margin-right: 42rpx;
}
.title text{
  font-size: 32rpx;
}
.number{
  height: 193rpx;
  line-height: 190rpx;
  font-size: 28rpx;
  display: flex;
  justify-content:space-between;
  padding: 0 26rpx;
}
.number span{
  color: #ae0e70;
  font-size: 44rpx;
}
.fun{
  padding: 0rpx 55rpx;
  display: flex;
  justify-content:space-between;
  flex-wrap:wrap;
  border-top: 20rpx solid #f4f4f4;
  background-color: #fff;
}
.fun view{
  text-align: center;
  margin: 0 40rpx;
  margin-top: 55rpx;
  
}
.fun image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  display: block;
}
.fun text{
  display: inline-block;
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}
.code{
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5)
}
.board{
  width: 600rpx;
  height: 750rpx;
  background: #fff;
  margin: 176rpx auto;
  border-radius: 15rpx;
  text-align: center;
}
.avatar{
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  background-color: #d8d8d8;
  margin-top: 60rpx;
}
.name{
  margin: 26rpx 0 0rpx 0;
  font-size: 30rpx;
  color: #727272;
}
.codePhoto{
  width: 400rpx;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
}
.codePhoto image{
  width: 100%;
  height: 100%;
}
.codePhoto image{
  width: 100%;
  height: 100%;
}
.instructions{
  font-size: 24rpx;
  color: #999;
}
.codePhoto .merchants{
  position:absolute;
right:50%;
bottom:45%;
width:60rpx;
height:60rpx;
border-radius:50%;
margin-right:-30rpx;
}