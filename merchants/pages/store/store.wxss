/* pages/store/store.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f4f4f4;
  overflow: auto;
}
.header{
  position: relative;
  height: 440rpx;
}
.header image{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
}
.header .mask{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: rgba(0,0,0,.5);
}
.header text{
  position: absolute;
  left: 55rpx;
  bottom: 45rpx;
  color: #fff;
  font-size: 36rpx;
  z-index: 101;
}
.information{
  padding: 0 46rpx;
  background-color: #fff;
}
.information view{
  padding: 40rpx 16rpx;
  border-top: 1rpx solid #ddd;
  font-size: 30rpx;
  color: #666;
  display: flex
}
.information view:first-child{
  border-top: 0rpx solid #ddd;
}
.information .val{
  margin-left: 48rpx;
  color: #333;
}
.information view .key{
  width: 115rpx;
}