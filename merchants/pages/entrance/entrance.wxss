/* pages/entrance/entrance.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f4f4f4;
  overflow: auto;
}
.header{
  height: 180rpx;
  background-color: #fff;
  padding: 40rpx 60rpx 45rpx 60rpx;
  font-size: 32rpx;
  color: #777;
  box-sizing: border-box;
}
.header .level{
  margin-top: 20rpx;
}
.center{
  padding: 0 40rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding-bottom: 98rpx;
}
.center .total{
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  height: 125rpx;
  line-height: 125rpx;
}
.center .total text{
  color: #aa0e76;
  font-size: 36rpx;
}
.list{
  font-size: 28rpx;
  background-color: #fff;
  overflow:hidden;
  padding: 35rpx 0 40rpx 0;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.list .time{
  color: #999;
  padding: 0 20rpx;
}
.list view{
  overflow: hidden;  
}
.list .phone{
  color: #999;
  padding: 0 20rpx;
  padding-bottom: 30rpx;
}
.list view .vip{
  float: right;
  color: #777777;
}
.list view .name{
  margin-right: 32rpx;
  font-size: 34rpx;
}
.list .company{
  margin: 0rpx 0 35rpx 0;
  color: #333;
  padding: 0 20rpx;
}
.list image{
  position: absolute;
  right:15rpx;
  bottom: 50rpx;
  width: 47rpx;
  height: 47rpx;
}
button{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 98rpx;
  line-height: 95rpx;
  background:linear-gradient(to right, #b30d66, #98119a);
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
}
button::after{
  border-radius: 0;
}