/* pages/addActivity/addActivity.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f4f4f4;  
  overflow: auto;
  padding-bottom: 98rpx;
}
.elements{
  padding: 0 46rpx;
  background-color: #fff;
}
.elements input{
  height: 123rpx;
  line-height: 120rpx;
  padding-left: 15rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ddd;
  color: #666;
}
.time{
  height: 123rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #999;
  display: flex;
  justify-content:space-around;
}
.picture{
  padding: 45rpx 62rpx;
  background-color: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}
.picture textarea{
  font-size: 32rpx;
  color: #666;
  width: 100%;
  margin-bottom: 110rpx;
}
.picture image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
  display: block;
  float: left;
}
button{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 98rpx;
  line-height: 95rpx;
  background:linear-gradient(to right, #b30d66, #98119a);
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
}
button::after{
  border-radius: 0;
}
.active{
  color: #666;
}