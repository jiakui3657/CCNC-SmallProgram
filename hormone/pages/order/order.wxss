/* pages/order/order.wxss */
page{
  min-height: 100%;
  height: 100%;
}
.container{
  min-height: 100%;
  background-color: #ebebeb;
  padding: 30rpx;
  box-sizing: border-box;
  display:block;
  height: auto;
}
.list{
  background-color: #fff;
  margin-bottom: 50rpx;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 0 30rpx;
  box-shadow: -2rpx 0 15rpx #ebebeb,0 -2rpx 15px #ebebeb,0 2rpx 15rpx #ebebeb,2rpx 0 15rpx #ebebeb;
}
.title image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  vertical-align:middle;
}
.money{
  margin: 70rpx 0 40rpx 0;
  display: flex;
  justify-content: center;
}
.money view{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title text{
  font-size: 32rpx;
  color: #3e3e3e;
}
.time{
  height: 72rpx;
  font-size: 32rpx;
  line-height: 72rpx;
  color: #060606;
  border-top: 1rpx solid #d7d7d7;
}