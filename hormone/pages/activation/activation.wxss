/* pages/activity/activity.wxss */
page{
  background-color: #f5f5f5;
  padding-bottom: 170rpx;
}
.list{
  width: 680rpx;
  height:320rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.list .bj {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.list .title{
  color:#fff;
  font-size:36rpx;
  width:400rpx;
  overflow:hidden;
  word-break:keep-all;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.booking{
  position:absolute;
  bottom:40rpx;
  right:156rpx;
  color:#fff;
  width:130rpx;
  height:65rpx;
  line-height:65rpx;
  text-align:center;
  font-size:28rpx;
  background-color:#9f108c;
  border-radius:32rpx;
}
.navigation{
  position:absolute;
  bottom:25rpx;
  right:30rpx;
  width:100rpx;
  height:100rpx;
  border-radius:50%;
}
.list .vip{
  color:#fff;
  font-size:28rpx;
  white-space:pre-wrap;
  margin-top:15rpx;
}
.list .distance{
  color:#fff;
  font-size:28rpx;
  position: absolute;
  bottom: 50rpx;
  left: 40rpx;
}
.shadow{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  border-radius: 20rpx;
  padding:40rpx;
  box-sizing:border-box;
}
.initial {
  position:fixed;
  bottom:60rpx;
  left:50rpx;
  width:100rpx;
  height:100rpx;
  z-index:1111;
}
.we{
  position:fixed;
  bottom:200rpx;
  left:0rpx;
  height:100rpx;
  width:145rpx;
  z-index:111;
}
.phone{
  position:fixed;
  bottom:60rpx;
  right:50rpx;
  width:100rpx;
  height:100rpx;
  z-index:1111;
}
.upgrade{
  position:fixed;
  bottom:180rpx;
  right:50rpx;
  z-index:1111;
  text-align:center;
}
.upgrade .upgradeImg {
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  z-index:1111;
  display:block;
}
.upgrade .text {
  font-size:28rpx;
  color:#666;
}
.card {
  position:fixed;
  bottom:72rpx;
  left:0%;
  right:0%;
  width:330rpx;
  height:100rpx;
  line-height:92rpx;
  border-radius:50rpx;
  text-align:center;
  color:#fff;
  background-color:#9e108c;
  z-index:111;
  margin:0 auto;
  font-size:44rpx;
  display: flex;
  justify-content: space-between;
  box-shadow:-2rpx 0 15rpx #808080,0 -2rpx 15px #808080,0 2rpx 15rpx #808080,2rpx 0 15rpx #808080;
}
.card image{
  width: 44rpx;
  height: 44rpx;
  margin-top:28rpx;
}
.mask{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 340rpx;
}
.two{
  background: linear-gradient( rgba(255, 255, 255,0), rgb(255, 255, 255));   height: 170rpx;
  width: 100%;
}
.one{
  height: 170rpx;
  width: 100%;
  background-color: #fff;
}
.card1{
  position:fixed;
  top:40rpx;
  left:0rpx;
  right:0rpx;
  color:#fff;
  font-size:36rpx;
  z-index:1111;
  width:680rpx;
  height:350rpx;
  margin:0 auto;
  border-radius:20rpx;
  overflow:hidden;
}
.card1 .vipCard {
  position:absolute;
  top:0rpx;
  left:0rpx;
  z-index:1111;
  width:680rpx;
  height:350rpx;
  border-radius:20rpx;
}
.card1 .vipCode {
  position:absolute;
  top:80rpx;
  right:82rpx;
  z-index:11111;
  width:180rpx;
  height:180rpx;
  border:1rpx solid #000;
  border-radius:20rpx;

}

.card1 .vipName {
  position:absolute;
  top:160rpx;
  left:192rpx;
  z-index:11111;
  font-size:28rpx;
}
.card1 .phone {
  position:absolute;
  top:130rpx;
  left:80rpx;
  z-index:11111;
  width:100rpx;
  height:100rpx;
  border-radius:49rpx;
}
.card1 .time {
  position:absolute;
  top:160rpx;
  right:28rpx;
  z-index:11111111;
  width:34rpx;
  height:34rpx;
  background-color: #9e108c;
  color: #fff;
  font-size: 30rpx;
  line-height: 33rpx;
  text-align: center;
  border-radius: 10rpx;
}
.card1 .endTime{
  position:absolute;
  bottom:36rpx;
  right:90rpx;
  z-index:11111;
  font-size:22rpx;
}