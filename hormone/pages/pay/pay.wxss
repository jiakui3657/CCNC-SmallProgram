/* pages/pay/pay.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  padding: 28rpx 35rpx;
  background-color: #fff
}
.merchants{
  position: relative;
  width: 680rpx;
  height: 320rpx;
  margin: 0 auto;
  box-shadow:-2rpx 0 15rpx #808080,0 -2rpx 15px #808080,0 2rpx 15rpx #808080,2rpx 0 15rpx #808080;
  border-radius: 10rpx;
  overflow: hidden;
}
.merchants image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.merchants view{
  position: absolute;
  z-index: 101;
  color: #fff
}
.merchants .title{
  margin: 40rpx 0 0 40rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.merchants .introduce{
  margin: 110rpx 40rpx 0 40rpx;
  font-size: 28rpx;
}
.money{
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
  margin-top: 80rpx;
  width: 90%;
}
.money input{
  margin-left: 36rpx;
  color: #999;
  font-size:36rpx;
}
.money text{
  margin-left: 42rpx;
  color: #666;
  font-size:36rpx;
}
.pay{
  width: 90%;
  margin: 35rpx 0 46rpx 0;
}
.pay .list{
  display: flex;
  justify-content: space-between;
}
.pay .list .avatar{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 26rpx 0;
}
.pay .list .way{
  display: inline-flex;
  justify-content: space-between;
  width: 82%;
  box-sizing:border-box;
  margin-left: 22rpx;
  border-bottom: 1rpx solid #ddd;
}
.pay .list .way image{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-top: 43rpx;
}
.pay .list .way text{
  font-size:34rpx;
  color: #333;
  padding-top: 44rpx;
}
.zf{
  height: 98rpx;
  line-height: 98rpx;
  background: #ac0e73;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.label-2__icon {
    margin-right: 20rpx;
    width: 36rpx;
    height: 36rpx;
    background: #fcfff4;
    border-radius: 50%;
    border: 1rpx solid #ac0e73;
    margin-top: 7rpx;
}

.label-2__icon-checked {
    position: absolute;
    left: 8rpx;
    top: 8rpx;
    width: 24rpx;
    height: 24rpx;
    background: #ac0e73;
    border-radius: 50%;
}
.label-2{
  margin-bottom: 20rpx;
  display:flex;
  justify-content: flex-start;
}
.group {
  width:100%;
  padding-left:60rpx;
  box-sizing:border-box;
}
button{
  float: right;
  width: 120rpx;
  text-align: center;
  line-height: 66rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  border: 0;
  padding:0;
  border-radius:35rpx;
  background: #9e108c;
  margin-top: 40rpx;
  margin-right: 30rpx;
}
button::after{
  border: 0
}