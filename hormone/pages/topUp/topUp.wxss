/* pages/topUp/topUp.wxss */
page{
  height: 100%;
}
.container{
  padding: 30rpx 35rpx;
  box-sizing: border-box;
  display: block;
  height: auto;
  min-height: 100%;
  background-color: #f5f5f5;
  padding-bottom:140rpx;
}
.card{
  overflow: hidden;
  position: relative;
  color: #fff;
  height: 180rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: -2rpx 0 15rpx #ccc,0 -2rpx 15px #ccc,0 2rpx 15rpx #ccc,2rpx 0 15rpx #ccc;
  display:flex;
  margin: 0 auto;
}
.card image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ccc
}
.card .information{
  margin-left: 20rpx;
  font-size:34rpx;
  color:#333;
  font-weight: 600;
  padding-top: 10rpx;
}
.card .name{
  font-size: 28rpx;
  color: #666;
  margin-left:-3rpx;
}
.container .money{
  height: 376rpx;
  background-color: #fff;
  box-shadow: -2rpx 0 15rpx #ccc,0 -2rpx 15px #ccc,0 2rpx 15rpx #ccc,2rpx 0 15rpx #ccc;  
  border-radius: 10rpx;  
  margin: 25rpx auto;
  padding: 54rpx 36rpx;
  box-sizing: border-box;
}
.container .money .moneyList{
  display: flex;
  justify-content: space-between;
  padding-top: 10rpx;
  flex-wrap: wrap;
}
.container .money .moneyList .list{
  width: 187rpx;
  height: 76rpx;
  font-weight: 600;
  text-align: center;
  line-height: 72rpx;
  color: #ab0e75;
  font-size: 30rpx;
  border: 1px solid #ab0e75;
  border-radius: 5rpx;
  margin-top: 30rpx;
}
.container .money .moneyList .active{
  background: #ab0e75;
  color: #fff;
}
.container .title {
  font-size: 30rpx;
  color: #6b6b6b;
}
.securities{
  height: 245rpx;  
  width: 100%;
  overflow: hidden;  
  position: relative;
  color: #333;
  margin-bottom:-10rpx;
}
.securities .bj{
  height: 100%;  
  width: 104%;
  margin-left: -2%;
}
.pay{
  height: 98rpx;
  width: 100%;
  /* text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 32rpx; */
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  /* background: linear-gradient(to right, #b30d66, #98119a);  */
  box-shadow:0rpx 4rpx 15rpx #000,0rpx 0rpx 0rpx #ccc,0rpx 0rpx 0rpx #ccc,0rpx 0rpx 0rpx #ccc;
  z-index: 1111;
  display: flex;
}
.pay button::after{
  border-radius: 0rpx;  
  border: 0;
}
button{
  padding:0;
  border-radius: 0rpx;
  width: 100%;
  text-align: center;
  line-height: 93rpx;
  color: #fff;
  font-size: 32rpx;
