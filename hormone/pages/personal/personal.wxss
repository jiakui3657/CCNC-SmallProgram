/* pages/personal/personal.wxss */
.container{
  text-align: left;
  padding: 0
}
.economize{
  position:absolute;
right:70rpx;
bottom:42rpx;

}
.header{
  height: 255rpx;
  border-bottom: 1rpx solid #d4d4d4;
  background-color: #f4f4f4;
  padding: 82rpx 40rpx 36rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}
.header image{
  width: 133rpx;
  height: 133rpx;
  border-radius: 50%;
  border: 1rpx solid #c0c0c0;
  float: left;
}
.header .information{
  float: left;
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #333;
}
.header .information .company{
  color: #666;
}
.todo{
  padding: 36rpx 82rpx;
  width: 100%;
  box-sizing: border-box;
}
.list image{
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
}
.list text{
  margin-left: 50rpx;
  vertical-align:middle;
  font-size: 32rpx;
  color: #333;
  padding: 50rpx 0;
   display: inline-block; 
  border-bottom: 1rpx solid #ddd;
  width: 84%;
}
/* 模态框 */
.modal{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  line-height: 100%;
  text-align: center
}
.min{
  width: 80%;
  position:absolute;
  top: 50%;
  margin: -90rpx 10%;
  z-index: 111;
  
}
.min button{
  border-radius: 0;
  border: 0;
  padding: 0;
}
.min button::after{
  border-radius: 0;
  border: 0;
}
.balance{
  overflow: hidden
}
.balance view{
  float: left;
  width: 84%;
  margin-left:50rpx;
  border-bottom:1rpx solid #ddd;
}
.balance text{
  float: left;
  width: auto;
  border: 0;
  margin: 0;
}
.balance image{
  float: left;
  margin-top:50rpx;
}
.balance .money{
  float: left;
  font-weight: 600;
  color: #323232;
  margin-left: 10rpx;
}
.balance button{
  float: right;
  width: 120rpx;
  text-align: center;
  line-height: 66rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  border: 0;
  padding:0;
  border-radius:35rpx;
  background: #9e108c;
  margin-top: 40rpx;
}
.balance button::after{
  border: 0
}
.employees{
  width:200rpx;
  text-align:center;
line-height:76rpx;
height:80rpx;
font-size:30rpx;
color:#fff;
border:0;
padding:0;
border-radius:40rpx;
background:#9e108c;
margin: 0 auto;
margin-top:40rpx;
}