/* pages/storeDetails/storeDetails.wxss */
page{
  overflow: hidden;
  height: 100%;
}
.main{
  flex-direction:column;
  justify-content:space-between;
  box-sizing:border-box;
  overflow-x:hidden;
  height: 100%;
}
/* 轮播图 */
.swiper{
  height: 440rpx;
  width: 100%;
}
.swiper-item{
  height: 440rpx;
  width: 100%;
}
image{
  width: 100%;
  height: 422rpx;
}
.container{
  padding: 0 60rpx;
  display:block;
  height: auto;
}
.container .title{
  padding: 35rpx 0;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}
.container .secondary{
  font-size: 26rpx;
  font-weight: 400;
  color: #666;
}
.container .address{
  border-top:1rpx solid #ddd;
  border-bottom:1rpx solid #ddd;
  font-size:26rpx;
  color:#666;
  width:100%;
  text-align:left;
  margin:50rpx 0;
  box-sizing:border-box;
  padding:20rpx 10rpx;
  position: relative;
  overflow: hidden;
}
.container .address text{
  width:520rpx;
  overflow:hidden;
  display:inline-block;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  vertical-align: middle;
  float: left;
}
.container .merchantsphone {
  width: 37rpx;
  height: 38rpx;
  float: right;
  margin: 24rpx 0;
}
.container .merchantsnavigation {
  width: 36rpx;
  height: 35rpx;
  float: right;
  /* margin: 24rpx 0; */
  margin-right: 33rpx;
  vertical-align: middle;
}
.container .introduce {
  font-size: 28rpx;
  color: #666;
  line-height: 56rpx;
  padding-bottom: 150rpx;
  text-align: left;
}
.navigation{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 101;
  display: flex;
  height: 98rpx;
  line-height: 98rpx;
  width: 100%;
}
.navigation .money{
  background-color: #efefef;
  width: 50%;
  padding-left: 76rpx;
  font-size: 24rpx;
  color: #666;
}
.navigation .money text{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.navigation .money image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;

}
.navigation .securities{
  background-color: #ac0e73;  
  width: 50%;  
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
.modal{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 101;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  overflow: hidden;
}
.modal .footer{
  height: 0rpx;
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #fff;
  padding: 4rpx 35rpx 50rpx 35rpx;
  box-sizing: border-box;
}
.modal .number {
  padding: 58rpx 0;
  border-bottom: 1rpx solid #ddd
}
.modal .number text {
  color: #666;
  font-size: 28rpx;
  line-height: 60rpx;
  display: inline-block;
}
.modal .number .num{
  width: 133rpx;
  text-align: center;
  color: #333;
  float: right;  
}
.modal .number .add{
  width: 58rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #333;
  border:1rpx solid #ddd;
  float: right;  
}
.modal .number .reduction{
  width: 58rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #333;
  border:1rpx solid #ddd;
  float: right;
}
.modal .total{
  padding: 53rpx 0;
  line-height: 40rpx;
  
}
.modal .total text{
  color: #666;
  font-size: 28rpx;
  display: inline-block;
}
.modal .total .money{
  float: right;
  font-size: 24rpx;
  color: #9d108f;
}
.modal .total .money text{
  font-size: 40rpx;
}
.modal button{
  width: 680rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(to right, #b30d66, #98119a); 
  border-radius: 0rpx;
  font-size: 30rpx;
  margin-top: 35rpx;
}
.modal button::after{
  border-radius: 0rpx;  
}