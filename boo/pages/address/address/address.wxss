.fixe {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  padding: 20rpx;
  background-color: #fff;
  width: 100%;
  z-index:111;
}
.search {
  padding: 8rpx 0;
  border: 2rpx solid #ddd;
  overflow: hidden;
  border-radius: 10rpx;
  width:94%;
  background-color: #f5f5f5;
}
input {
  width: 95%;
  height: 60rpx;
  line-height: 60rpx;
  color: #c5c5c5;
  margin: 0 auto;
  font-size:28rpx;
  padding-left: 25rpx;
  float: left;
}
.searchIcon {
  float: left;
  width: 75rpx;
  height: 60rpx;
  text-align: center;
}
.searchIcon image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.collection {
  overflow: hidden;
}
.list {
  overflow: hidden;
}
.list .letter {
  color: #666;
  background-color: #f5f5f5;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 38rpx;
  padding-left: 50rpx;
}
.list .li {
  overflow: hidden;
  padding-left: 20rpx;
}
.list .li:last-child .information{
  border: 0
}
.list image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 14rpx 30rpx 14rpx 10rpx;
  float: left;
}
.list .information {
  float: left;
  width: 79%;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 20rpx 0 30rpx 0;
  position: relative;
}
.name {
  font-size: 32rpx;
  font-weight: 600;
  vertical-align:middle;
}
.list .position{
  
}
.list .phone{
  width: 60rpx;
  height: 60rpx;
  border-radius: 26rpx;
  position: absolute;
  right: 0rpx;
  top: 30rpx; 
}
.list .company{
  float: right;
}
.position {
  color: #666;
  font-size: 24rpx;
}
.minletter{
  position: fixed;
  right: 20rpx;
  top:150rpx;
}
.minletter view {
  font-size:28rpx;
  width:50rpx;
  text-align:center;
  height:35rpx;
  line-height:35rpx;
}
.maxletter{
  position: fixed;
  right: 100rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 98rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #333;
  font-size: 40rpx;
  border-radius: 50%;
}