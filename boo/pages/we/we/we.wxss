page{
  height: 100%;
}
.container {
  background-color:#eeeeee;
  height: 100%;
}
.inform {
  padding: 70rpx 20rpx;
  overflow: hidden;
  background-color: #b21e23;
}
.company {
  font-size:36rpx;
  font-weight:600;
  color: #fff;
}
.company .position {
  font-size: 30rpx;
  font-weight: 400;
}
.inform image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  float: left;
}
.collection {
  float: left;
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}
.names{
  color: #fff;
  font-size: 30rpx;
  margin: 24rpx 0 20rpx;
}
.add{
  width: 128rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  color: #fff;
  border: 1rpx solid #fff;
  margin-top: 25rpx;
}
.certification {
  width: 100rpx;
  height: 38rpx;
  line-height: 38rpx;
  color: #fff;
  text-align: center;
  float: right;
  font-size: 22rpx;
  border: 1rpx solid #fff;
  margin-top:20rpx;
}
.total{
  background-color: #fff; 
}
.list{
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1rpx solid #e6e6e6;
  padding: 0 30rpx;
}
.icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 0 22rpx;
  font-size: 40rpx;
  margin-top: 40rpx;
}
.right {
  float: right;
  margin-top: 45rpx;
  width: 15rpx;
  height: 27rpx;
}
.list text {
  font-size: 34rpx;
  margin-left: 10rpx;
}
.activation{
  width: 490rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #b21e23;
  color: #fff;
  font-weight: 600;
  margin: 0 auto;
  margin-top: 56rpx;
  font-size: 30rpx;
  border-radius: 0;
}
.activation::after{
  border-radius: 0;
}
/* 模态框 */
.modal{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  line-height: 100%;
  text-align: center
}
.min{
  width: 80%;
  position:fixed;
  top: 50%;
  margin: -90rpx 10%;
  z-index: 111;
  
}
.min button{
  border-radius: 0;
  border: 0;
  padding: 0;
}
.min button::after{
  border-radius: 0;
  border: 0;
}