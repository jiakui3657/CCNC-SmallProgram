/* pages/we/addMembers/addMembers.wxss */
.show {
  position: relative;
  padding: 0 20rpx;
  margin-top: 25rpx;
  margin-bottom: 50rpx;
  }
input {
  display: block;
  border: 0;
  border-bottom: 1rpx solid #e2e2e2;
  padding-left: 20px;
  font-size: 26rpx;
  height: 125rpx;
  line-height: 125rpx;
}
image {
  width: 600rpx;
  height: 400rpx;
  margin: 57rpx auto 83rpx;
}
text{
  width: 200rpx;
  text-align: right;
  display: inline-block;
}
.file {
  width: 507rpx;
  height: 286rpx;
  margin: 57rpx auto 83rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
}
.replace{
  text-align: center;
  margin: 57rpx auto 83rpx;
}
.replace image{
  width: 507rpx;
  height: 286rpx;
  border-radius: 10rpx;
  margin: 0;
}
.file image {
  width: 97rpx;
  height: 97rpx;
  margin: 68rpx auto 40rpx;
  display: block;
}
.file text {
  text-align: center;
  display: block;
  font-size: 22rpx;
  color: #cacaca;
  width: 100%;
}
.submit {
  width: 508rpx;
  border-top: 1rpx solid #000;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #b21e23;
  color: #fff;
  border: 0;
  margin: 40rpx auto;
  text-align: center;
}
.hidden{
  display: none;
}
.default{
  color: #333;
  font-size: 28rpx;
  height: 74rpx;
  line-height: 74rpx;
  padding-left: 40rpx;
}