/* pages/we/vip/vip.wxss */
.header{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #f4eadb;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
}
.container{
  padding: 0 35rpx;
  box-sizing: border-box;
  padding-bottom: 150rpx;
  padding-top: 90rpx;
}
.container image{
  width: 100%;
  height: 430rpx;
  border-radius: 20rpx;
  margin-top: 35rpx;
  box-shadow:0rpx 0rpx 0rpx #ccc,0rpx 0rpx 0rpx #ccc,0rpx 0rpx 0rpx #ccc,0rpx 4rpx 15rpx #ccc;
}
button{
  height: 98rpx;
  width: 100%;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 32rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: linear-gradient(to right, #b30d66, #98119a); 
  border-radius: 0rpx;
}
button::after{
  border-radius: 0rpx;  
}