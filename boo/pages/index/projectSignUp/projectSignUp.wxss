.header {
  text-align: center;
  box-shadow: inset 0px 2rpx 3rpx #ccc;
  padding-bottom: 85rpx;
  border-bottom: 1rpx solid #e3e3e3;
  padding-top: 55rpx;
}
.header image {
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  margin: 25rpx 0;
}
