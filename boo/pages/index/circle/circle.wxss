}
.under .left .number .arrow {
  margin-left: 20rpx;
  width: 30rpx;
  height:31rpx;
  display: inline-block;
  transform:rotate(-90deg);
  transition:All 0.2s ease;
  -webkit-transition:All 0.2s ease;
}
.under .right {
  float: right;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 26rpx;
}
