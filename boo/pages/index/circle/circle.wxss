  float: left;
}
.under .left navigator image {
  width: 95rpx;
  height: 45rpx;
}
.under .left .number {
  float: left;
  height: 46rpx;
  line-height: 46rpx;
  margin-left: 20rpx;
  overflow: hidden;
}
.under .left .number .start,.end {
  font-size: 24rpx;
