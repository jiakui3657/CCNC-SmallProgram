.content{
  position: relative;

}
.clear:after{
  content: "";
  display: block;
  height: 0;
  clear: both;
}
.left{
  width: 24%;
  position: fixed;
  left: 0;
  top: 0;
  overflow:auto;
  height: 100%;
}
.left::-webkit-scrollbar {
  display:none;
}
