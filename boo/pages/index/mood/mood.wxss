page{
  background-color: #f3f3f3;
}
.container{
  padding: 20rpx 48rpx 0rpx 48rpx;
  font-size: 26rpx;
  height: auto;
  background-color: #fff;
}
textarea{
  width: 100%;
  padding: 10rpx;
  height: 180rpx;
  color: #666;
  font-size: 30rpx;
}
.imgs {
  overflow: hidden;
  padding: 40rpx 0;
  border-bottom:1rpx solid #e3e3e3;
}
.imgs .file {
  position: relative;
  float: left;
  margin-right: 12rpx;
  margin-top: 12rpx;
}
.imgs .file image {
  width: 150rpx;
  height: 150rpx;
}
.imgs .file .icon {
  position: absolute;
  right: -20rpx;
  top: -30rpx;
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
}
.imgs .last {
  width: 148rpx;
  height: 148rpx;
  border: 2rpx dotted #dcdcdc;
  text-align: center;
  line-height: 148rpx;
}
.imgs .last image {
  width: 64rpx;
  height: 64rpx;
  margin-top: 42rpx;
}
.positioning{
  height: 100rpx;
  line-height: 100rpx;
}
.positioning image{
  width:28rpx;
  height: 37rpx;
  vertical-align: middle;
}
.positioning text{
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
  font-weight: 400;
}
.additional {
  background-color: #fff;
  padding: 0 47rpx;
  overflow:hidden;
  padding-bottom: 20rpx;
}
.switchAdditional {
  padding: 48rpx 47rpx;
  overflow: hidden;
  background-color: #fff;
  margin-top: 25rpx;
}
.switchAdditional .molecular {
  color: #666;
  font-size: 30rpx;
  float: left;
  font-weight: 600;
}
.additional .todo {
  margin-top: 7rpx;
  overflow: hidden;
}
.additional .todo .list {
  width: 197rpx;
  height: 120rpx;
  margin-right: 20rpx;
  margin-bottom: 25rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
  text-align: center;
  float: left;
}
.additional .todo .list .many {
  color: #f44040;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 20rpx;
}
.additional .todo .list .num {
  color: #999;
  font-size: 22rpx;
  font-weight: 600;
  margin-top: 0rpx;
}
.additional input {
  padding-left: 30rpx;
  height: 116rpx;
  line-height: 116rpx;
  color: #ccc;
  font-size: 30rpx;
}
.additional .todo .active {
  background-color: #f44040;
  border-color: #f44040;
}
.additional .todo .active .many,.num {
  color: #fff;
}
.additional .todo .active .num {
  color: #fff;
}
.pay {
  margin-top: 25rpx;
  padding: 10rpx 47rpx 15rpx 47rpx;
  background-color: #fff;
}
.pay .title {
  height: 95rpx;
  line-height: 95rpx;
  color: #666;
  font-weight: 600;
  padding-left: 16rpx;
  font-size: 30rpx;
}
.pay .way{
  height: 156rpx;
  line-height: 156rpx;
  padding-left: 15rpx;
  border-top: 1rpx solid #e3e3e3;
}
.pay .way image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.pay .way .change {
  font-size: 30rpx;
  color: #666;
  font-weight: 600;
  margin-left: 38rpx;
  vertical-align: middle;
}
.pay .way .amount {
  font-size: 48rpx;
  color: #ff8e2a;
  font-weight: 600;
  margin-left: 48rpx;
  vertical-align: middle;
}
.pay .way .amount text {
  font-size: 28rpx;
}
.release {
  width: 655rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #b21e23;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin: 62rpx auto 97rpx;
}